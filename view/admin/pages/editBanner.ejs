<%- include("../admin-header.ejs") %>
    <div class="container">

        <%- include("../adminnav.ejs") %>
        <div class="body">
            <%- include("../sidebar.ejs") %>

            <div class="content_part">

                <form id="banner_edit_form">
                    <div class="frame">
                        <div class="banner_gap_div">
                            <div class="banner_div">

                                <div class="banner_img_div">      
                                    <div class="form-group img_centr">
                                        <div class="banner_image_space">
                                            <img src="/uploads/banner/<%= banner.bannerImage %>" alt="" id="imagePreview" style="width: 100%; height: 100%;">
                                        </div>
                                       <div class="banner_image_buttn">
                                           Choose Image
                                        <input type="file" id="bannerImage" name="bannerImage" onchange="previewImage(this)">
                                       </div>
                                    </div>
                                </div>

                                <div style="width: 100%;">
                                    <div class="form-group">
                                        <label for="bannerProduct">Banner Name</label>
                                        <input type="text" id="bannerName" name="bannerName" placeholder="Enter banner name" value="<%= banner.bannerName %>">
                                    </div>
                                    <div class="form-group">
                                        <label for="offerPrice">Offer Price</label>
                                        <input type="number" id="offerPrice" name="offerPrice" placeholder="Enter banner offer price" value="<%= banner.offerPrice %>">
                                    </div>
                                    <div class="form-group">
                                        <label for="bannerHeading">Banner Heading</label>
                                        <input type="text" id="bannerHeading" name="bannerHeading" placeholder="Enter banner heading name" value="<%= banner.bannerHeading %>">
                                    </div>
                                    <div class="form-group">
                                        <label for="startingDate">Starting Date</label>
                                        <input type="date" id="startingDate" name="startingDate" value="<%= banner.startingDate.toISOString().substring(0,10) %>">
                                    </div>
                                    <div class="form-group">
                                        <label for="endingDate">Ending Date</label>
                                        <input type="date" id="endingDate" name="endingDate" value="<%= banner.endingDate.toISOString().substring(0,10) %>">
                                    </div>
                                    <div id="errorMessage" style="color: brown; margin-bottom: 1rem;"></div>
                                    <div class="form-group">
                                        <button type="submit" id="banner_edit_button" banner-id="<%= banner._id %>">Update Banner</button>
                                    </div>
                                </div>
                                
                            </div>
                        </div>
                    </div>
                </form>
                         
            </div>
        </div>
    </div>

<%- include("../../end.ejs") %>

<script src="/js/admin/editBanner.js"></script>