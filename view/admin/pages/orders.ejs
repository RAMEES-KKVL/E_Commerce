<%- include("../admin-header.ejs") %>
    <div class="container">

        <%- include("../adminnav.ejs") %>
        <div class="body">
            <%- include("../sidebar.ejs") %>

            <div class="content_part">

                <div class="order_list_head">
                    <p style="font-size: x-large; padding-left: 1.5rem;">Orders</p>
                </div>

                <div class="order_list">
                    <div class="order_table">

                        <table>
                            <thead>
                                <tr>
                                    <th>Order ID</th>
                                    <th>Product Id</th>
                                    <th>Product Name</th>
                                    <th>Price</th>
                                    <th>User ID</th>
                                    <th>Status</th>
                                </tr>
                            </thead>

                            <tbody>
                                <% orders.forEach(userOrder =>{ %> 
                                    <% userOrder.orders.forEach(order =>{ %>
                                        <% order.productId.forEach(product =>{ %>
                                            <tr>
                                                <td><%= order._id %></td>
                                                <td><%= product.productId._id %></td>
                                                <td><%= product.productId.productName %></td>
                                                <td><%= product.productId.price - product.productId.discount %></td>
                                                <td><%= userOrder.userId %></td>
                                                <td style="<%= product.orderStatus === 'Cancelled' ? 'color:red;' : 'color:green;' %>">
                                                    <%= product.orderStatus %>
                                                </td>
                                            </tr>
                                        <% }) %>
                                    <% }) %>
                                <% }) %>
                            </tbody>
                        </table>

                    </div>
                </div>          
            </div>
        </div>
    </div>

<%- include("../../end.ejs") %>