<%- include("../admin-header.ejs") %>
    <div class="container">

        <%- include("../adminnav.ejs") %>
        <div class="body">
            <%- include("../sidebar.ejs") %>

            <div class="content_part">

                <div class="products_list_head">
                    <p style="font-size: x-large; padding-left: 1.5rem;">Coupons</p>
                    <button class="add_product_btn_admin"  onclick="window.location.href='/admin/coupons/add_Coupon'">Add Coupon</button>
                </div>

                <div class="product_list">
                    <div class="product_table">
                        <table>

                            <thead>
                                <tr>
                                    <th>Coupon ID</th>
                                    <th>Coupon Name</th>
                                    <th>Coupon Discount</th>
                                    <th>Minimum Amount</th>
                                    <th>Maximum Amount</th>                                                                              
                                    <th>Starting Date</th>
                                    <th>Ending Date</th>
                                    <th>Availability</th>
                                    <th>Edit</th>
                                    <th>Delete</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% coupons.forEach(coupon =>{ %>
                                    <tr>
                                        <td> <%= coupon._id %> </td>
                                        <td> <%= coupon.couponName %> </td>
                                        <td> <%= coupon.couponDiscount %> </td>
                                        <td> <%= coupon.minOrderAmount %> </td>
                                        <td> <%= coupon.maxOrderAmount %> </td>
                                        <td> <%= coupon.startingDate.toDateString() %> </td>
                                        <td> <%= coupon.endingDate.toDateString() %> </td>
                                        <td> <%= coupon.availability %> </td>
                                        <td>
                                            <i class="bi bi-pencil-square" onclick="location.href= '/admin/coupons/edit_Coupon?couponId=<%= coupon._id %>'"></i>
                                        </td>
                                        <td>
                                            <i class="bi bi-trash-fill" coupon-id="<%= coupon._id %>"></i>
                                            <div id="errormsg" style="color: brown;"></div>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
    
                        </table>
                    </div>
                </div>
                         
            </div>
        </div>
    </div>

<%- include("../../end.ejs") %>  

<script src="/js/admin/deleteCoupons.js"></script>