<%- include("../admin-header.ejs") %>
    <div class="container">

        <%- include("../adminnav.ejs") %>
        <div class="body">
            <%- include("../sidebar.ejs") %>

            <div class="content_part">

                <div class="products_list_head">
                    <p style="font-size: x-large; padding-left: 1.5rem;">Categories</p>
                    <button class="add_product_btn_admin" onclick="window.location.href='/admin/category/add_Category'">Add Category</button>
                </div>
                
                <div class="product_list">

                    <div class="product_table">
                        <table>

                            <thead>
                                <tr>
                                    <th>Sl.No</th>
                                    <th>Category ID</th>
                                    <th>Category Name</th>
                                    <th>Product Count</th>
                                    <th>Edit</th>                                       
                                    <th>Delete</th>
                                </tr>
                            </thead>
                            <tbody>
                            <% category.forEach((value, index) =>{ %>
                                <tr>
                                    <td><%= index + 1 %></td>
                                    <td><%= value._id %></td>
                                    <td><%= value.category %></td>
                                    <td><%= value.subCategory.length %></td>
                                    <td>
                                        <i class="bi bi-pencil-square"></i>
                                    </td>
                                    <td>
                                        <i class="bi bi-trash-fill"></i>
                                    </td>
                                </tr>
                            <% }) %>
                            </tbody>

                        </table>
                    </div>
                </div>

                         
            </div>
        </div>
    </div>

<%- include("../../end.ejs") %>